{% extends 'base.html.twig' %}

{% block title %}Liste des transactions{% endblock %}

{% block body %}
    {% include "common/_navbar_action.html.twig" with {'title': 'Liste des transactions','return' : 'home'} %}

    <div class="container py-5 px-4 height-vh-full padding-v-mobile">
        {{ include('common/_messages_flash.html.twig') }}
        <div class="table-responsive">
            <table class="table colorWhite">
                <thead>
                    <tr>
                        <th>Crypto</th>
                        <th>Quantité</th>
                        <th>Prix</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for transaction in transactions %}
                    <tr>
                        <td class="font-size-0-8">{{ transaction.crypto }}</td>
                        <td class="font-size-0-8">{{ transaction.quantity }}</td>
                        <td class="font-size-0-8">{{ transaction.price }} €</td>
                        <td class="font-size-0-8">{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d') : '' }}</td>
                        <td>
                            <a class="colorGrey" href="{{ path('app_transaction_edit', {'id': transaction.id}) }}"><i class="fa-solid fa-pen"></i></a>
                            <a class="colorGrey" href="{{ path('app_transaction_form_delete', {'id': transaction.id}) }}"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
